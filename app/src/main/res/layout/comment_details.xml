<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef">

    <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_above="@+id/temp"
            android:layout_below="@+id/note_details_navigation_top"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/scroll_view_comment_details"
            android:clickable="true"
            android:focusable="true"
            android:background="#efefef">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_comment_details"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:focusable="true">

            <LinearLayout
                    android:id="@+id/comment_details_main_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="64dp"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
                    android:background="@drawable/box_rounded">

                <TextView
                        android:id="@+id/comment_details_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Content"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:padding="12dp"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="#15000000" />

                <TextView
                        android:id="@+id/comment_details_hashes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:padding="10dp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/comment_details_main_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/box_rounded">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="horizontal"
                        android:layout_gravity="end|top">

                    <pl.itomaszjanik.test.CustomImage
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/icon_comments_gray_24dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:layout_marginEnd="8dp"/>

                    <TextView
                            android:id="@+id/comment_details_comments_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="#15000000" />

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/comment_details_comments_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="#15000000" />

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground">


                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:text="@string/comment_refresh"
                            android:textAlignment="center"
                            android:clickable="false"
                    />

                </RelativeLayout>

            </LinearLayout>



            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="64dp"
                    android:visibility="gone"
                    android:id="@+id/progressBar"/>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <pl.itomaszjanik.test.NavigationController
            android:id="@+id/comment_details_navigation_top"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:baselineAligned="false"
            android:background="@drawable/top_background"
            android:layout_gravity="top"
            android:weightSum="100">

        <RelativeLayout
                android:id="@+id/comment_details_button_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:clickable="true"
                android:focusable="true">

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackground"
                    android:clickable="false"
            />

            <pl.itomaszjanik.test.CustomImage
                    android:id="@+id/comment_details_icon_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_arrow_black_24dp"
                    android:clickable="false"
            />

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:clickable="true"
                android:focusable="true">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:text="@string/app_name"
                    android:textSize="24sp"
            />

        </RelativeLayout>

    </pl.itomaszjanik.test.NavigationController>

    <include
            android:id="@+id/temp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/box_comment"
            android:layout_height="56dp"
            layout="@layout/comment_insert"/>

</RelativeLayout>