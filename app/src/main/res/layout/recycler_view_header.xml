<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efefef">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="-6dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/recycler_top">

            <LinearLayout
                    android:id="@+id/api"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                <pl.itomaszjanik.test.ExtendedComponents.CustomImage
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/icon_comments_gray_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"/>

                <TextView
                        android:id="@+id/comment_details_comments_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="7.5dp"
                    android:layout_below="@+id/api"
                    android:focusableInTouchMode="true"
                    android:background="#15000000"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>